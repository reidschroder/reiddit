<article class="post">
      <div class="title">
        <a>{{title}}</a>
      </div>
      <div class="post-text">
        {{post_text}}
      </div>
      <div class="meta">
        {{vote_count}} {{format_plural "like" vote_count}} by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
    </article>